autoload RR

namespace Server {

    import RR;

    public typedef Client;
    public typedef Game;

    public typedef struct {
	int	x, y;
	Object	object;
    } ObjectLoc;

    public typedef union {
	void	none;
	string	username;
    } User;

    public typedef union {
	void	none;
	&Game	game;
    } GameRef;

    public typedef struct {
	file	    f;
	User	    user;
	GameRef	    game;
	int	    score;
    } Client;

    public typedef union {
	void	none;
	int	seconds;
    } Time;

    public typedef union {
	void	none;
	&Client	client;
    } ClientRef;
    
    public typedef struct {
	string		name;
	(&Client)[*]	clients;
	Target[*]	targets;
	Board		board;
	Time		time;
	ClientRef	active;
	ObjectLoc[*]    history;
    } Game;
}
